<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/editProfile.css" />
</head>

<body>
    <%- include('../partials/header') %>

    <div class="edit-profile-form-container">
        <form class="edit-profile-form" action="/users/editProfile?_method=PUT" method="POST" enctype="multipart/form-data">
            <h1>Editar Mis Datos</h1>
            <div class="profile-pic-container">
                <img class="profile-pic" src="/uploads/<%= user.image %>" alt="Profile Picture">
                <label class="upload-icon">
                    <input type="file" id="image" name="image" accept="image/*" style="display:none;">
                    <i class="fas fa-camera"></i>
                </label>
            </div>

            <div class="field-group">
                <label for="name">Nombre:</label>
                <input type="text" id="name" name="name" value="<%= user.name %>" required>
            </div>

            <div class="field-group">
                <label for="email">Correo Electrónico:</label>
                <input type="email" id="email" name="email" value="<%= user.email %>" required>
            </div>

            <div class="field-group">
                <label for="password">Nueva Contraseña:</label>
                <input type="password" id="password" name="password">
            </div>

            <div class="field-group">
                <label for="phone">Teléfono:</label>
                <input type="text" id="phone" name="phone" value="<%= user.phone %>">
            </div>

            <div class="field-group">
                <label for="location">Ubicación:</label>
                <input type="text" id="location" name="location" value="<%= user.location %>">
            </div>

            <button type="submit">Guardar</button>
            <button type="button" class="cancel" onclick="window.history.back();">Cancelar</button>
        </form>
    </div>

    <%- include('../partials/footer') %>
</body>

</html>
